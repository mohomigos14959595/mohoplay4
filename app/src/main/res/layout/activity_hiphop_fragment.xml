<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_hiphop_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradual"
    tools:context="com.example.sazgar.mohoplay.Fragments.HiphopFragment">

    <TextView
        android:id="@+id/h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="HipHop"
        android:textColor="#ffffff"
        android:textSize="50sp" />

    <ListView
        android:id="@+id/listhiphop"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/h"
        android:layout_centerHorizontal="true" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/listhiphop"
    android:background="#9b313131"
    android:visibility="invisible"
    android:id="@+id/realativelayouthiphop">
    <SeekBar
        android:id="@+id/seekbarhiphop"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textviewsongnameselected"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:textColor="#aaa"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/seekbarhiphop"
        android:gravity="center"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_pause_black_24dp"
        android:id="@+id/textviewpause"
        android:layout_below="@+id/textviewsongnameselected"
      android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/textviewstart"
        android:background="@drawable/ic_play_arrow"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/textviewsongnameselected"
        android:visibility="invisible"
        />
</RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".5"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
