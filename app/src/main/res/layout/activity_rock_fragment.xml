<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rock_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradual"
    tools:context="com.example.sazgar.mohoplay.Fragments.RockFragment">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="casual"
        android:text="rock"
        android:textColor="#ffffff"
        android:textSize="60sp" />

    <ListView
        android:id="@+id/listviewrock"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/r">

    </ListView>
    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="song"-->
    <!--android:textSize="30sp"-->
    <!--android:fontFamily="casual"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:id="@+id/textviewrock"-->
    <!--android:layout_centerHorizontal="true"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listviewrock"
        android:background="#9b313131"
        android:visibility="invisible"
        android:id="@+id/relativerock">

        <SeekBar
            android:id="@+id/seekbarrock"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textviewsongrockselected"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_below="@id/seekbarrock"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#aaa" />

        <TextView
            android:id="@+id/textviewpauserock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textviewsongrockselected"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_pause_black_24dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textviewstartrock"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/textviewsongrockselected"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_play_arrow"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>
